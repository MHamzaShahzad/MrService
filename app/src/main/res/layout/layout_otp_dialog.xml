<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/text_enter_username_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/raleway_light"
        android:text="Enter 6 digit code that we sen to "
        android:textColor="@color/colorPrimaryLight"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/input_otp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text_enter_username_password"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_style_edittext"
        android:drawablePadding="20dp"
        android:fontFamily="@font/raleway_light"
        android:hint="Enter Code"
        android:maxLength="6"
        android:inputType="textPersonName"
        android:textColor="#595858"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_verify"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_otp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimaryLight"
        android:textStyle="bold"
        android:fontFamily="@font/raleway_light"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:text="OK"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp" />

</RelativeLayout>